"resource/layout/steamrootdialog_gamespage_list.layout"
{
	controls
	{
		"GamesList"
		{
			tabposition=1
		}
	}

	colors
	{
		ListPanel.PostSectionLeading 10
	}

	styles
	{
		ListPanelSectionHeader
		{
			inset="2 0 0 0"
			textcolor=label
			font-family=semibold
			font-style="outerglow, regular"
			font-outerglow-color="TextH"
			font-outerglow-offset=1
			font-outerglow-filtersize=1
			render_bg
			{
				0="gradient_horizontal( x0 - 1, y0, x0 + 250, y1 - 1, DialogBGL, none )"
			}
		}
	}

	layout
	{
		place { control="GamesList" width=max height=max margin-left=1 }
	}
}
